{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "label": "0. Download submodules",
            "type": "shell",
            "command": "git submodule update --init --recursive",
            "problemMatcher": []
        },
        {
            "label": "1. Generate Project files",
            "group": {
                "isDefault": true,
                "kind": "test"
            },
            "type": "shell",
            "command": "cmake -GNinja -Bbuild -H. -DCMAKE_BUILD_TYPE=Debug -DPEUTIL_DEFAULT_SEARCH_PATH=${env:MINGW64_ROOT}/bin"
        },
        {
            "label": "2. Build",
            "type": "shell",
            "command": "ninja",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "problemMatcher": []
        },
        {
            "label": "3. Find Qt5Core Dependencies",
            "type": "shell",
            "command": "./peldd.exe -a ${env:MINGW64_ROOT}/bin/Qt5Core.dll",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "problemMatcher": []
        }
    ]
}